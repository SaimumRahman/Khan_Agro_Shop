<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backnav"
    tools:context=".Activities.CustomerNavigationActivity">


    <FrameLayout
        android:id="@+id/fragment_container_customer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/customer_bottom_navigation"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/customer_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#F84B3F"
        android:backgroundTint="#F1D909"
        app:menu="@menu/customermenu" />

</RelativeLayout>